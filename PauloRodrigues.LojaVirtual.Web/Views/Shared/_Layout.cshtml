@using System.Web.Optimization

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Loja Virtual Benz</title>
        
        @Styles.Render("~/Content/css")
    </head>
    <body>
    <div class="container body-content">
        <div class="navbar navbar-inverse" role="navigation">
            <a class="navbar-brand" href="#">Loja Virtual Benz</a>
            @Html.Action("Resumo", "Carrinho")
        </div>


        <div class="row panel">
            <div id="categorias" class="col-xs-3">
                @Html.Action("Menu", "Categoria")
            </div>

            <div id="catalogo" class="col-xs-9">
                @RenderBody()
            </div>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")

        @RenderSection("scripts", required: false)

    </body>

    <footer>
        <hr />
        <p> &copy; @DateTime.Now.Year - Paulo Rodrigues </p>
    </footer>
</html>