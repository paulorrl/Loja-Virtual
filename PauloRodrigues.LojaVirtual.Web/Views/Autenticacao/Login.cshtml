@model PauloRodrigues.LojaVirtual.Dominio.Entidades.Administrador

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width-device-width"/>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
        <link href="~/Content/MyStyles/ErrorStyle.css" rel="stylesheet"/>
        <link href="~/Content/MyStyles/LoginStyle.css" rel="stylesheet" />
        <title>Benz Virtual - Login</title>
    </head>
    <body>
        <div class="container" style="margin-top: 40px">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong> Benz Virtual - Autenticação</strong>
                        </div>

                        <div class="panel-body">
                            @using (Html.BeginForm("Login", "Autenticacao", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-signin"}))
                            {
                                @Html.ValidationSummary()
                                <fieldset>
                                    <div class="row">
                                        <div class="center-block">
                                            <img class="profile-img"
                                                 src="~/Content/" alt="">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                            <div class="form-group">
                                                @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-user"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.Login, new {@class = "form-control", placeholder = "Digite seu usuário", autofocus = "autofocus"})

                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock"></i>
                                                    </span>
                                                    @Html.PasswordFor(m => m.Senha, new {@class = "form-control", placeholder = "Digite sua senha"})
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-primary btn-block" value="Acessar">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            }
                        </div>

                        <div class="panel-footer ">
                            Paulo Rodrigues - pauloroberto.prrl@gmail.com
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>